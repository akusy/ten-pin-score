
.page-header
  %h3= "Game #{@game.id}"

%p
  %strong Total score:
  %br
  = @game.total


%table.table.table-condensed
  %thead
    %tr
      %th Frame number
      %th Points
      %th Balls
  %tbody
    - @frames.each do |f|
      %tr
        %td= f.number
        %td= f.points
        %td
          %ul.list-group
          - f.balls.each do |b|
            %li.list-group-item= render_ball b

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), root_path, :class => 'btn'

